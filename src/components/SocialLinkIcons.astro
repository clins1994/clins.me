---
import { EMAIL, HANDLE, RESUME_URL } from '../../astro.config.mjs'
import HeaderLink from './HeaderLink.astro'
import GitHub from './IconGitHub.astro'
import Gmail from './IconGmail.astro'
import LinkedIn from './IconLinkedIn.astro'
import Linktree from './IconLinktree.astro'
import IconResume from './IconResume.astro'
---

<HeaderLink href={`https://linktr.ee/${HANDLE}`} target="_blank">
  <Linktree />
</HeaderLink>
•
<HeaderLink href={`https://www.linkedin.com/in/${HANDLE}`} target="_blank">
  <LinkedIn />
</HeaderLink>
•
<HeaderLink href={`https://github.com/${HANDLE}`} target="_blank">
  <GitHub />
</HeaderLink>
•
<HeaderLink href={`mailto:${EMAIL}`} target="_blank">
  <Gmail />
</HeaderLink>
•
<HeaderLink href={RESUME_URL} target="_blank">
  <IconResume />
</HeaderLink>
